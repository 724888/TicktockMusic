<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TickTextView">
        <!--波纹效果-->
        <attr name="tv_enable_ripple" format="boolean"/>
        <!--字体风格-->
        <attr name="tv_enable_font_type" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TickLinearLayout">
        <attr name="ll_enable_ripple" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PlayPauseView">
        <attr name="bg_color" format="color"/>
        <attr name="btn_color" format="color"/>
        <attr name="gap_width" format="float"/>
        <attr name="space_padding" format="float"/>
        <attr name="anim_duration" format="integer"/>
        <attr name="anim_direction">
            <enum name="positive" value="1"/>
            <enum name="negative" value="2"/>
        </attr>
    </declare-styleable>

</resources>
