<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:layout_marginTop="@dimen/dp_003"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_2">

    <com.lauzy.freedom.librarys.widght.TickLinearLayout
        android:id="@+id/layout_queue_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_20">

        <com.lauzy.freedom.librarys.widght.TickTextView
            android:id="@+id/txt_queue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_1205"
            tools:text="@string/app_name"/>

        <com.lauzy.freedom.librarys.widght.TickTextView
            android:id="@+id/txt_queue_singer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/sp_12"
            tools:text="@string/app_name"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"/>

        <ImageView
            android:id="@+id/img_queue_delete"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:padding="@dimen/dp_6"
            android:src="@drawable/ic_delete_black"
            android:tint="@color/gray_dark"/>

    </com.lauzy.freedom.librarys.widght.TickLinearLayout>
</android.support.v7.widget.CardView>