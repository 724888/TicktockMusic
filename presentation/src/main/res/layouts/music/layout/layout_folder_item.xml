<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_003"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_2">

    <com.lauzy.freedom.librarys.widght.TickLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_folder_item"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:gravity="center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:adjustViewBounds="true"
            android:tint="@color/gray_darker"
            android:contentDescription="@null"
            android:src="@drawable/ic_folder"/>

        <com.lauzy.freedom.librarys.widght.TickLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lauzy.freedom.librarys.widght.TickTextView
                android:id="@+id/tv_file_name"
                android:layout_marginBottom="@dimen/dp_4"
                style="@style/MarqueeTxtStyle"
                tools:text="@string/app_name"/>

            <com.lauzy.freedom.librarys.widght.TickTextView
                android:id="@+id/tv_desc"
                style="@style/MarqueeTxtStyle"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/sp_1205"
                tools:text="@string/app_name"/>

        </com.lauzy.freedom.librarys.widght.TickLinearLayout>

    </com.lauzy.freedom.librarys.widght.TickLinearLayout>
</android.support.v7.widget.CardView>